#verbose   0
#debug     0

# --------------------------  DECAM01  ------------------------------------

dts
    name      decam01
    host      decam01.fnal.gov
    port      3000
    loPort    3001
    hiPort    3100
    root      /home/sispi/dts_mjf/dts01/
    logfile   /home/sispi/dts_mjf/dts01.log

    # Queue configurations
    queue 				# entry point from domes
	name	      	test		# queue name
        node          	ingest		# ingest, transfer, or endpoint
        type          	normal		# normal, scheduled, priority
	mode	        push		# push or give
	method        	dts		# dts or ????
	nthreads      	4		# No. of outbound threads
        port	      	3001		# base transfer port
        dest            decam02
	deliveryDir   	spool
	# deliveryCmd

# --------------------------  DECAM02  ------------------------------------

dts
    name      decam02
    host      decam02.fnal.gov
    port      3000
    loPort    3001
    hiPort    3100
    root      /home/sispi/dts_mjf/dts02/
    logfile   /home/sispi/dts_mjf/dts02.log

    # Queue configurations
    queue 				# entry point from domes
	name	      	test		# queue name
        node          	transfer	# ingest, transfer, or endpoint
        type          	normal		# normal, scheduled, priority
	mode	        push		# push or give
	method        	dts		# dts or ????
	nthreads      	4		# No. of outbound threads
        port	      	3001		# base transfer port
        src		decam01
        dest            decam03
	deliveryDir   	/home/sispi/dts_mjf/data02
	#deliveryCmd

