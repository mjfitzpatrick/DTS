# default: on
# description: An internal xinetd service, starting the DTS monitoring daemon.

service dtsmon
{
	type		= UNLISTED
	socket_type	= stream
	protocol	= tcp
	wait		= no
        server          = /usr/local/bin/dtsmon
	port		= 2999
	user		= fitz
	log_type	= FILE /tmp/dtsmon.logfile
	log_on_success	+= HOST DURATION
	log_on_failure	+= HOST
}                                                                               
